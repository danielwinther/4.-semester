<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    tools:context=".activities.NyhedDetaljerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titelDetaljer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/udgivelsesdatoDetaljer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7a7776"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/broedtekstDetaljer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp" />


        <ImageView
            android:id="@+id/billedeDetaljer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/forfatterDetaljer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/indholdDetaljer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>
